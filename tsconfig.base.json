{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "types": ["@testing-library/jest-dom", "jest", "node"],
    "customConditions": ["@org/source"],
    "paths": {
      "@org/db": ["libs/db/src/index.ts"],
      "@org/models": ["libs/models/src/index.ts"],
      "@org/ui": ["libs/ui/src/index.ts"],
      "@org/styles/*": ["libs/styles/src/*"],
      "@org/assets": ["libs/assets/src/index.ts"]
    }
  }
}
